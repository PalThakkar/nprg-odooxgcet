// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  loginId      String?  @unique
  email        String   @unique
  password     String
  name         String?
  phone        String?
  avatarUrl    String?
  status       String   @default("absent") // present, absent, on-leave
  companyId    String?
  company      Company? @relation(fields: [companyId], references: [id])
  roleId       String
  role         Role     @relation(fields: [roleId], references: [id])
  isFirstLogin Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  data          AppData[]
  attendances   Attendance[]
  leaveRequests LeaveRequest[]
  salaryInfo    SalaryInfo?
  privateInfo   PrivateInfo?

  @@map("users")
}

model Attendance {
  id       String    @id @default(uuid())
  userId   String
  user     User      @relation(fields: [userId], references: [id])
  checkIn  DateTime  @default(now())
  checkOut DateTime?
  date     DateTime  @default(now()) @db.Date

  @@map("attendances")
}

model Company {
  id            String            @id @default(uuid())
  name          String
  initials      String // For Login ID generation: "OI" -> Odoo India
  logoUrl       String?
  users         User[]
  counters      EmployeeCounter[]
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  leaveRequests LeaveRequest[]

  @@map("companies")
}

model EmployeeCounter {
  id        String  @id @default(uuid())
  companyId String
  company   Company @relation(fields: [companyId], references: [id])
  year      Int
  count     Int     @default(0)

  @@unique([companyId, year])
  @@map("employee_counters")
}

model Role {
  id          String  @id @default(uuid())
  name        String  @unique // e.g. "admin", "user", "support"
  description String?
  users       User[]

  @@map("roles")
}

model LeaveRequest {
  id           String      @id @default(uuid())
  userId       String
  user         User        @relation(fields: [userId], references: [id])
  companyId    String
  company      Company     @relation(fields: [companyId], references: [id])
  type         String // e.g. "SICK", "VACATION", "PERSONAL"
  startDate    DateTime
  endDate      DateTime
  status       LeaveStatus @default(PENDING)
  reason       String?
  adminComment String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@map("leave_requests")
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

model SalaryInfo {
  id           String @id @default(uuid())
  userId       String @unique
  user         User   @relation(fields: [userId], references: [id])
  monthlyWage  Float
  yearlyWage   Float
  workingDays  Int    @default(5)
  workingHours Float  @default(8)
  breakTime    Float  @default(1) // in hours

  // Salary Components
  basic             Float
  hra               Float
  standardAllowance Float
  performanceBonus  Float
  lta               Float
  fixedAllowance    Float

  // Deductions
  pfEmployee      Float
  pfEmployer      Float
  professionalTax Float @default(200)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("salary_info")
}

model PrivateInfo {
  id             String    @id @default(uuid())
  userId         String    @unique
  user           User      @relation(fields: [userId], references: [id])
  
  // Personal Info
  dateOfBirth    DateTime?
  residingAddress String?
  nationality    String?
  personalEmail  String?
  gender         String?
  maritalStatus  String?
  dateOfJoining  DateTime?
  
  // Bank Details
  accountNumber  String?
  bankName       String?
  ifscCode       String?
  panNo          String?
  uanNo          String?
  empCode        String?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@map("private_info")
}

model AppData {
  id        String   @id @default(uuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@map("app_data")
}
