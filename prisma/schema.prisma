generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id @default(uuid())
  loginId       String?        @unique
  email         String         @unique
  password      String
  name          String?
  phone         String?
  companyId     String?
  roleId        String
  isFirstLogin  Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  avatarUrl     String?
  status        String         @default("absent")
  data          AppData[]
  attendances   Attendance[]
  leaveRequests LeaveRequest[]
  salaryInfo    SalaryInfo?
  company       Company?       @relation(fields: [companyId], references: [id])
  role          Role           @relation(fields: [roleId], references: [id])
  privateInfo   PrivateInfo?

  @@map("users")
}

model Attendance {
  id       String    @id @default(uuid())
  userId   String
  checkIn  DateTime  @default(now())
  checkOut DateTime?
  date     DateTime  @default(now()) @db.Date
  user     User      @relation(fields: [userId], references: [id])

  @@map("attendances")
}

model Company {
  id            String            @id @default(uuid())
  name          String
  initials      String
  logoUrl       String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  counters      EmployeeCounter[]
  leaveRequests LeaveRequest[]
  users         User[]

  @@map("companies")
}

model EmployeeCounter {
  id        String  @id @default(uuid())
  companyId String
  year      Int
  count     Int     @default(0)
  company   Company @relation(fields: [companyId], references: [id])

  @@unique([companyId, year])
  @@map("employee_counters")
}

model Role {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?
  users       User[]

  @@map("roles")
}

model LeaveRequest {
  id           String      @id @default(uuid())
  userId       String
  companyId    String
  type         String
  startDate    DateTime
  endDate      DateTime
  status       LeaveStatus @default(PENDING)
  reason       String?
  adminComment String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  company      Company     @relation(fields: [companyId], references: [id])
  user         User        @relation(fields: [userId], references: [id])

  @@map("leave_requests")
}

model SalaryInfo {
  id                String   @id @default(uuid())
  userId            String   @unique
  monthlyWage       Float
  yearlyWage        Float
  workingDays       Int      @default(5)
  workingHours      Float    @default(8)
  basic             Float
  hra               Float
  standardAllowance Float
  performanceBonus  Float
  lta               Float
  fixedAllowance    Float
  pfEmployee        Float
  pfEmployer        Float
  professionalTax   Float    @default(200)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id])

  @@map("salary_info")
}

model PrivateInfo {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  // Personal Info
  dateOfBirth     DateTime?
  residingAddress String?
  nationality     String?
  personalEmail   String?
  gender          String?
  maritalStatus   String?
  dateOfJoining   DateTime?

  // Bank Details
  accountNumber String?
  bankName      String?
  ifscCode      String?
  panNo         String?
  uanNo         String?
  empCode       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("private_info")
}

model AppData {
  id        String   @id @default(uuid())
  content   String
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@map("app_data")
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}
